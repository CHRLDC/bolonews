{% extends 'base.html.twig' %}

{% block title %}Connectez-vous !
{% endblock %}

{% block main %}
	<main class="container-1200 pT50">
		<h1 class="texte-center mB30 form-title">Connectez-vous</h1>

		<form method="post" class="form-login">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}" class="link-logout">Logout</a>
				</div>
			{% endif %}

			<div class="form-group">
				<label for="username" class="form-label">Email</label>
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
			</div>

			<div class="form-group">
				<label for="password" class="form-label">Mot de passe</label>
				<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn-submit" type="submit">Se connecter</button>
		</form>
	</main>
{% endblock %}
